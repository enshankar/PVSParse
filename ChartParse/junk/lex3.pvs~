% lex3 provides a lexical ordering for triples of natural numbers.

lex3: THEORY
  BEGIN

  i, j, k, m, n, p: VAR nat

  lex3(m, n, p): ordinal =
    IF (m = 0) THEN lex2(n, p) ELSE add(m, add(2, zero, zero), lex2(n, p)) ENDIF
  % COND
  %     m = 0 ∧ n = 0 ∧ p = 0  -> zero
  %     m = 0 ∧ n = 0 ∧ p/= 0  -> add(p, zero, zero)
  %     m = 0 ∧ n/= 0 ∧ p = 0  -> 
  %     m = 0 ∧ n/= 0 ∧ p/= 0  ->
  %     m/= 0 ∧ n = 0 ∧ p = 0  ->
  %     m/= 0 ∧ n = 0 ∧ p/= 0  ->
  %     m/= 0 ∧ n/= 0 ∧ p = 0  ->
  %     m/= 0 ∧ n/= 0 ∧ p/= 0  -> add(m, 
  % ENDCOND 
  
      

  lex3_lt: LEMMA
    lex3(i, j, k) < lex2(m, n, p) = (i < m) ∨ ((i = m) ∧ ((j < n) ∨ ((j = n) ∧ (k < p)))

 END lex2
