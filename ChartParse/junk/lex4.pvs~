% lex4 provides a lexical ordering for quadruples of natural numbers.

lex4: THEORY
  BEGIN
  IMPORTING lex3
  i, j, k, l, m, n, p, q: VAR nat

  lex4(m, n, p, q): ordinal =
    IF (m = 0) THEN lex3(n, p, q) ELSE add(m, add(3, add(2, add(1, zero, zero), zero), zero), lex3(n, p, q)) ENDIF

  wtf? : LEMMA NOT (add(2, add(2, zero, zero), zero) = add(1, zero, zero))

  lex4_lt: LEMMA
    (lex4(i, j, k) < lex4(m, n, p)) =
      ((i < m) OR(
       (i = m) AND(lex3(j,k) < lex3(n, p)))
      )

 END lex4
